# OpenAlex API Configuration
# Copy this file to .env and modify as needed

# PostgreSQL Connection (replace with your external PostgreSQL details)
POSTGRES_URL=postgresql://postgres:postgres@host.docker.internal:5432/openalex
# Whether to store data in PostgreSQL (set to False to disable database updates)
USE_POSTGRES=False

# API Configuration
API_PORT=8000
LOG_LEVEL=INFO

# Update Job Configuration
UPDATE_BATCH_SIZE=100
UPDATE_MAX_RECORDS=10000
# Email used for OpenAlex API requests (recommended to avoid rate limiting)
PYALEX_EMAIL=your.email@example.com 