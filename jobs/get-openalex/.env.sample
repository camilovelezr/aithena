# OpenAlex API Configuration
# Copy this file to .env and modify as needed

# PostgreSQL Connection (replace with your external PostgreSQL details)
# These settings are used to construct DB_CONFIG_STRING which is used for all PostgreSQL connections
POSTGRES_HOST = localhost
POSTGRES_PORT = 5432
POSTGRES_USER = postgres
POSTGRES_PASSWORD = postgres
POSTGRES_DB = openalex

# API Configuration
API_PORT=8000
LOG_LEVEL=INFO

# Update Job Configuration
UPDATE_BATCH_SIZE=100
UPDATE_MAX_RECORDS=10000

# Note: The DB_CONFIG_STRING is constructed automatically from the PostgreSQL settings above
# and used for all database connections via psycopg. You don't need to set it manually.
# Example: "dbname=openalex user=postgres port=5432 host=localhost password=postgres" 